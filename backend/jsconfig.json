{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "#config/*": ["src/config/*"],
      "#controllers/*": ["src/controllers/*"],
      "#errors/*": ["src/errors/*"],
      "#middlewares/*": ["src/middlewares/*"],
      "#repositories/*": ["src/repositories/*"],
      "#routes/*": ["src/routes/*"],
      "#services/*": ["src/services/*"],
      "#src/*": ["src/src/*"],
      "#utils/*": ["src/utils/*"],
      "#shared/*": ["../shared/src/*"],
      "#schemas/*": ["src/schemas/*"],
      "#registries/*": ["src/registries/*"]
    }
  },
  "include": ["server.js", "src/*", "src/**/*"]
}
