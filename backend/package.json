{
  "name": "budgetrack-backend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "vitest --no-watch",
    "test:watch": "vitest",
    "test:coverage": "vitest --no-watch --coverage",
    "test:coverage:watch": "vitest --coverage",
    "lint": "cd .. && npm run lint:backend",
    "dev": " NODE_ENV=development node --watch server.js",
    "start": "FORCE_COLOR=1 NODE_ENV=production node server.js",
    "migrations:generate": "typeorm migration:generate --esm --outputJs --dataSource ./src/db.js migrations/migration",
    "migrations:run": "typeorm migration:run --dataSource ./src/db.js"
  },
  "imports": {
    "#config/*": "./src/config/*",
    "#controllers/*": "./src/controllers/*",
    "#errors/*": "./src/errors/*",
    "#middlewares/*": "./src/middlewares/*",
    "#models/*": "./src/models/*",
    "#repositories/*": "./src/repositories/*",
    "#routes/*": "./src/routes/*",
    "#services/*": "./src/services/*",
    "#src/*": "./src/*",
    "#utils/*": "./src/utils/*"
  },
  "dependencies": {
    "shared": "file:../shared",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mssql": "^11.0.1",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1",
    "typeorm": "^0.3.25"
  }
}
