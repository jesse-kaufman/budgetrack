{
  "name": "budgetrack",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "npm start --workspace=backend",
    "build": "npm run build --workspace=frontend",
    "test": "npm run test --workspaces",
    "test:frontend": "npm run test:watch --workspace=frontend",
    "test:backend": "npm run test:watch --workspace=backend",
    "test:shared": "npm run test:watch --workspace=shared",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:coverage:frontend": "npm run test:coverage:watch --workspace=frontend",
    "test:coverage:backend": "npm run test:coverage:watch --workspace=backend",
    "test:coverage:shared": "npm run test:coverage:watch --workspace=shared",
    "lint": "eslint .",
    "lint:frontend": "eslint ./frontend",
    "lint:backend": "eslint ./backend",
    "lint:shared": "eslint ./shared",
    "lint:fix": "eslint . --fix",
    "lint:frontend:fix": "eslint ./frontend --fix",
    "lint:backend:fix": "eslint ./backend --fix",
    "lint:shared:fix": "eslint ./shared --fix",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:json": "concurrently \"npm run json-server --workspace=frontend\" \"npm run dev --workspace=frontend\"",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.26.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^52.0.4",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-vue": "^10.0.0",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@budgetrack/shared": "^1.0.0",
    "chalk": "^5.6.0",
    "http-status-codes": "^2.3.0"
  }
}
